
  
 
  <form id="chapterForm" novalidate>
  <input type="hidden" id="chapterId" name="chapterId" >
  <div class="form-group row">
    <label for="number" class="col-sm-2 col-form-label">Number:</label>
    <div class="col-sm-10">
      <input type="number" class="form-control" id="number" name="number"  placeholder="0" required>
    </div>
  </div>
   <div class="form-group row">
    <label for="title" class="col-sm-2 col-form-label">Title:</label>
    <div class="col-sm-10">
      <input type="text" class="form-control" id="title" name="title"  placeholder="enter a title" required>
    </div>
  </div>
   <div class="form-group row">
    <label for="pages" class="col-sm-2 col-form-label">Pages:</label>
    <div class="col-sm-10">
      <input type="number" class="form-control" id="pages" name="pages"  placeholder="0" required>
    </div>
  </div>
   <div class="form-group row">
    <div class="col-sm-10 offset-sm-2">
      <button type="submit" class="btn btn-primary">Submit</button>
      <button type="button" class="btn btn-danger" id="cancel-btn">Cancel</button>
    </div>
  </div>
  </form>
 
  